#!/bin/bash

# run-smoke-tests script

echo "Running basic connectivity test..."

# Check if the application homepage or any accessible page is reachable
response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:8080)
echo "HTTP response code from application homepage: $response"

if [ "$response" -eq 200 ]; then
    echo "Application homepage is accessible."
    exit 0
else
    echo "Application homepage is NOT accessible."
    exit 1
fi
