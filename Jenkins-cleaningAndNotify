pipeline {
    agent any
    stages {
        stage('Fail Stage') {
            steps {
                // This command will fail, invoking the failure block
                sh 'exit 1'  // Forces a failure
            }
        }
    }
    post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
        }
        failure {
            echo 'I failed :('
            mail to: 'apurva.karne@gmail.com',
                 subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
                 body: "The pipeline has failed. Check the details at: ${env.BUILD_URL}"
        }
    }
}
