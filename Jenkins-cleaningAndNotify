pipeline {
    agent any
    stages {
        stage('Fail Stage') {
            steps {
                // This command will fail, invoking the failure block
                sh 'exit 1'  // Forces a failure
            }
        }
    }
    post {
        always {
            echo 'One way or another, I have finished'
            deleteDir() /* clean up our workspace */
            hipchatSend  color: 'RED', notify: true, message: "Pipeline has finished. Check: ${env.BUILD_URL}"
        }
        failure {
            echo 'I failed :('
            hipchatSend  color: 'RED', notify: true, message: "Pipeline failed: ${currentBuild.fullDisplayName}. Check: ${env.BUILD_URL}"
        }
    }
}
